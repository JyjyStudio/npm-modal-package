{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
        "types": ["node"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "**/__tests__/*", "src/stories"]
}